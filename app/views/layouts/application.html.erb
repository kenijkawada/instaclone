<!DOCTYPE html>
<html>
  <head>
    <title>Instaclone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
          <a class="navbar-brand" href="/">InstaClone</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item active">
                <a class="nav-link" href="/pictures">PostList</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/pictures/new">NewPost</a>
              </li>
              <% if logged_in? %>
                <li class="nav-item active header-link"><%= link_to "Profile", user_path(current_user.id), class: "nav-link" %></li>
                <li class="nav-item active"><%= link_to "Logout", session_path(current_user.id), method: :delete , class: "nav-link"%></li>
              <% else %>
                <li class="nav-item active"><%= link_to "Sign in", new_user_path , class: "nav-link" %></li>
                <li class="nav-item active"><%= link_to "Login", new_session_path, class: "nav-link"%></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="content">
      <%= yield %>
    </div>
    <footer class="footer">
      <div class="container">
        <p>2018 InstaClone.</p>
      </div>
    </footer>

  </body>
</html>
